                android:layout_height="160dp"
                android:layout_columnWeight="1"

                android:layout_margin="8dp"
                android:padding="0dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp"
                tools:style="@style/CardView">

                <LinearLayout

                    android:layout_width="match_parent"
